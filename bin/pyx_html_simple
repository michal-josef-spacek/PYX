# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Parser;

# Open file.
my $file_handler = 'STDIN';
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$file_handler = *INF;
}

# PYX::Parser object.
$self->{'pyx_parser'} = PYX::Parser->new(
	'input_file_handler' => $self->{'input_file_handler'},
	'start_tag' => \&_start_tag,
	'end_tag' => \&_end_tag,
	'data' => \&_data,
	'attribute' => \&_attribute,
);

# Close file.
if ($ARGV[0]) {
	close(INF);
}

