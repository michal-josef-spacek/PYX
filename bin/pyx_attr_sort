#!/usr/bin/env perl
# $Id: pyx_attr_sort,v 1.7 2006-04-10 01:23:47 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Sort;

# Open file.
my $input_file_handler = \*STDIN;
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$input_file_handler = \*INF;
}

# PYX::Sort object.
my $sorter = PYX::Sort->new;
$sorter->parse_handler($input_file_handler);

# Close file.
if ($ARGV[0]) {
	close(INF);
}

