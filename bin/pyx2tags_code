#!/usr/bin/env perl

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Write::Tags::Code;
use Dumpvalue;

# Arguments.
if ($#ARGV < 0) {
	print "Usage: $0 [filename] [-]\n";
	print "\tfilename\tprocess on filename\n";
	print "\t-\t\tprocess on stdin\n";
	exit 1;
}

# PYX::Write::Tags::Code object.
my $writer = PYX::Write::Tags::Code->new;

# Parse from stdin.
if ($ARGV[0] eq '-') {
	$writer->parse_handler(\*STDIN);

# Parse file.
} else {
	$writer->parse_file($ARGV[0]);
}

# Get code and dump.
my $ret = $writer->get_tags_code;
my $dump = Dumpvalue->new;
$dump->dumpValues($ret);
