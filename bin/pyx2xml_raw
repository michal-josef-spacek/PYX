#!/usr/bin/env perl
# $Id: pyx2xml_raw,v 1.8 2006-02-17 13:49:25 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Write::Raw;

# Open file.
my $input_file_handler = *STDIN;
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$input_file_handler = *INF;
}

# PYX::Write::Raw object.
my $writer = PYX::Write::Raw->new;
$writer->parse_handler($input_file_handler);

# Close file.
if ($ARGV[0]) {
	close(INF);
}

