#!/usr/bin/env perl
# $Id: pyx2xml_raw,v 1.10 2006-04-10 13:18:13 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Write::Raw;

# Arguments.
if ($#ARGV < 0) {
	print "Usage: $0 [filename] [-]\n";
	print "\tfilename\tprocess on filename\n";
	print "\t-\t\tprocess on stdin\n";
	exit 1;
}

# PYX::Write::Raw object.
my $writer = PYX::Write::Raw->new;

# Parse from stdin.
if ($ARGV[0] eq '-') {
	$writer->parse_handler(\*STDIN);

# Parse file.
} else {
	$writer->parse_file($ARGV[0]);
}
