#!/usr/bin/env perl

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Write::Tags;
use Tags::Running;

# Arguments.
if ($#ARGV < 0) {
	print "Usage: $0 [filename] [-]\n";
	print "\tfilename\tprocess on filename\n";
	print "\t-\t\tprocess on stdin\n";
	exit 1;
}

# Tags::Running object.
my $tags = Tags::Running->new(
	'set_indent' => 0,
	'data_optimalization' => 1,
);

# PYX::Write::Tags object.
my $writer = PYX::Write::Tags->new(
	'tags_obj' => $tags,
);

# Parse from stdin.
if ($ARGV[0] eq '-') {
	$writer->parse_handler(\*STDIN);

# Parse file.
} else {
	$writer->parse_file($ARGV[0]);
}
