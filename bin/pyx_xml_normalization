#!/usr/bin/env perl
# $Id: pyx_xml_normalization,v 1.6 2005-08-14 08:47:32 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::XMLNorm;

# Open file.
my $file_handler = *STDIN;
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$file_handler = *INF;
}

# PYX::XMLNorm object.
my $sorter = PYX::XMLNorm->new(
	'input_file_handler' => $file_handler,
	'rules' => {
		'tr' => ['td', 'tr'],
		'td' => ['td'],
		'table' => ['tr'],
		'*' => ['br', 'hr', 'link', 'meta', 'input']
	},
);
$sorter->parse;

# Close file.
if ($ARGV[0]) {
	close(INF);
}

