#!/usr/bin/env perl
# $Id: pyx_optimalization,v 1.3 2006-02-17 12:39:28 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Optimalization;

# Open file.
my $input_file_handler = *STDIN;
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$input_file_handler = *INF;
}

# PYX::Optimalization object.
my $optimalizer = PYX::Optimalization->new(
	'input_file_handler' => $input_file_handler,
);
$optimalizer->parse_handler;

# Close file.
if ($ARGV[0]) {
	close(INF);
}

