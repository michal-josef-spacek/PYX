#!/usr/bin/env perl
# $Id: pyx2tags2_code,v 1.5 2006-02-17 12:39:28 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Write::Tags2::Code;
use Dumpvalue;

# Open file.
my $input_file_handler = *STDIN;
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$input_file_handler = *INF;
}

# PYX::Write::Tags2::Code object.
my $writer = PYX::Write::Tags2::Code->new(
	'input_file_handler' => $input_file_handler,
);
$writer->parse_handler;
my $ret = $writer->get_tags_code;

# Dump.
my $dump = Dumpvalue->new;
$dump->dumpValues($ret);

# Close file.
if ($ARGV[0]) {
	close(INF);
}

