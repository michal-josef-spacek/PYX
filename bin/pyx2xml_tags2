#!/usr/bin/env perl
# $Id: pyx2xml_tags2,v 1.7 2006-02-17 13:49:25 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Write::Tags2;
use Tags2;

# Open file.
my $input_file_handler = *STDIN;
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$input_file_handler = *INF;
}

# Tags2 object.
my $tags = Tags2->new(
	'output_handler' => *STDOUT,
);

# PYX::Write::Tags2 object.
my $writer = PYX::Write::Tags2->new(
	'tags_obj' => $tags,
);
$writer->parse_handler($input_file_handler);

$tags->flush;
print "\n";

# Close file.
if ($ARGV[0]) {
	close(INF);
}

