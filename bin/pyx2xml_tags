#!/usr/bin/env perl
# $Id: pyx2xml_tags,v 1.8 2006-02-17 13:49:25 skim Exp $

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Write::Tags;
use Tags::Running;

# Open file.
my $input_file_handler = *STDIN;
if ($ARGV[0]) {
	if (! open(INF, "<$ARGV[0]")) {
		die "Cannot open file '$ARGV[0]'.";
	}
	$input_file_handler = *INF;
}

# Tags::Running object.
my $tags = Tags::Running->new(
	'set_indent' => 1,
	'data_optimalization' => 1,
);

# PYX::Write::Tags object.
my $writer = PYX::Write::Tags->new(
	'tags_obj' => $tags,
);
$writer->parse_handler($input_file_handler);

# Close file.
if ($ARGV[0]) {
	close(INF);
}

